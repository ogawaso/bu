%h1
  = link_to @group.name, @group
  =_ 'Listing requests'

%p#notice= notice

.users
  - is_manager = @user && @group.manager?(@user)
  %table
    %tr
      %th=_ :name
      %th=_ :created_at
      %th=_ 'admin menu'
    - @group.member_requests.each do |req|
      - user = req.user
      %tr
        %td= link_to user.name, user
        %td=_ date_time(user.created_at)
        %td.bold.update
          = link_to _(:confirm), confirm_group_groups_member_request_path(id: req.id, group_id: @group.id), method: :put
          = link_to _(:reject), reject_group_groups_member_request_path(id: req.id, group_id: @group.id), method: :put

.bottom_menu
  = link_to @group.name, @group
  = link_to _('listing users'), group_members_path(group_id: @group.id)
